@model IEnumerable<Frontend.ViewModels.ProductDisplayViewModel>

<div class="max-w-[1200px] mx-auto mt-5">
    <div class="flex justify-between items-center p-3 mb-5 flex">
        <a asp-action="AddNewProduct" asp-controller="Product"
            class="flex gap-2 bg-green-500 text-white font-semibold py-2 px-3 rounded-xl cursor-pointer hover:bg-green-600 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-plus-icon lucide-plus">
                <path d="M5 12h14" />
                <path d="M12 5v14" />
            </svg>
            <span>Add New Product</span>
        </a>
        <form asp-action="Index" method="GET" id="search-form">
            <input type="hidden" name="page" value="@ViewBag.CurrentPage" id="page-input">
            <div class="relative w-full">
                <div class="relative">
                    <input name="search" type="text" class="w-[350px] p-2 border-1 rounded-xl border-gray-300 px-5"
                        id="search" value="@ViewBag.SearchTerm" placeholder="Search By Name">
                    <svg class="absolute left-3 top-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round" class="lucide lucide-search-icon lucide-search">
                        <path d="m21 21-4.34-4.34" />
                        <circle cx="11" cy="11" r="8" />
                    </svg>
                </div>
            </div>
        </form>
    </div>

    <table class="w-full border">
        <thead>
            <tr>
                <th class="border border-gray-300 p-2">Id</th>
                <th class="border border-gray-300 p-2">Product Image</th>
                <th class="border border-gray-300 p-2">Product Name</th>
                <th class="border border-gray-300 p-2">Product Price</th>
                <th class="border border-gray-300 p-2">Stock</th>
                <th class="w-[230px] py-2 pl-3 border border-gray-300 ">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td class="border border-gray-300 p-2">@product.Id</td>
                    <td class="w-[200px] border border-gray-300 p-2 text-center">
                        <div class="flex justify-center items-center">
                            <div class="relative overflow-hidden bg-gray-100 h-28 aspect-square">
                                <img src="http://localhost:5271/@product.ProductImages.FirstOrDefault()?.FilePath"
                                    alt="@product.Description"
                                    class="w-full h-full object-cover hover:scale-110 transition-transform duration-500 rounded-lg">
                            </div>
                        </div>
                    </td>
                    <td class="border border-gray-300 p-2 text-center">@product.Name</td>
                    <td class="border border-gray-300 p-2 text-center">@product.Price</td>
                    <td class="border border-gray-300 p-2 text-center">@product.Stock</td>
                    <td class="space-x-3 border border-gray-300 p-2 text-center">
                        <a asp-action="GetUpdateProductView" asp-controller="Product" asp-route-id="@product.Id"
                            class="inline-block p-2 border border-gray-300 rounded-lg w-20 inline-block text-center">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id"
                            class="inline-block p-2 bg-red-400 text-white rounded-lg w-20 inline-block text-center">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4 flex justify-center gap-1">
        @if (ViewBag.CurrentPage > 1)
        {
            <button class="bg-blue-500 text-white py-1 px-[12px]" onclick="changePage(@(ViewBag.CurrentPage - 1))">
                Prev
            </button>
        }
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <button type="button" onclick="changePage(@i)"
                class="@(i == ViewBag.CurrentPage ? "bg-blue-700" : "bg-blue-500") text-white py-1 px-[12px] hover:bg-blue-600">
                @i
            </button>
        }
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <button class="bg-blue-500 text-white py-1 px-[12px]" onclick="changePage(@(ViewBag.CurrentPage + 1))">
                Next
            </button>
        }
    </div>
</div>